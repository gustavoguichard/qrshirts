<h1> Order <%= order.number %> Comments </h1>

<div class=' pretty_table'>
<table>
  <thead>
  <tr class='odd'>
    <th class='column1_header'>Name</th><th></th><th></th>
  </tr>
  </thead>
  <% for comment in order.comments %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= link_to comment.name, admin_fulfillment_order_comment_path(order, comment) %></td>
      <td><%= link_to "Editar", edit_admin_fulfillment_order_comment_path(order, comment) %></td>
      <td><%= link_to "Destruir", admin_fulfillment_order_comment_path(order, comment), :confirm => 'Tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
</div>
<p><%= link_to "New Comment", new_admin_fulfillment_order_comment_path(order), :class => 'button' %></p>
