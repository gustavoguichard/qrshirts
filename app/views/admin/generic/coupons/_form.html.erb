<%= render partial: "/shared/errors", locals: {object: @coupon} %>
<fieldset>
  <label>Code</label>
  <%= f.text_field :code %>

  <% unless @coupon.id %>
    <label>Type</label>
    <%= select_tag :c_type, @coupon_types.map{|ct| "<option>#{ct}</option>"}.join().html_safe , { :include_blank => true } %>
  <% end %>

  <label>Amount</label>
  <%= f.text_field :amount %>

  <label>Minimum Value</label>
  <%= f.text_field :minimum_value %>

  <label>Percent</label>
  <%= f.text_field :percent %>

  <label>Description</label>
  <%= f.text_area :description %>

  <label>Combine</label>
  <%= f.check_box :combine %>

  <label>Starts at</label>
  <div class='date-select'>
    <%= f.date_select :starts_at %>
  </div>

  <label>Expires at</label>
  <div class='date-select'>
    <%= f.date_select :expires_at %>
  </div>
</fieldset>

<%= f.submit "Create", :class => "button" %>